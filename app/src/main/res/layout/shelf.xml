<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@color/brown">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="My Bookshelf"
            android:textSize="40sp"
            android:textColor="@color/beige"
            android:typeface="serif">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:backgroundTint="@color/green"
            android:id="@+id/bookshelf"
            android:layout_width="160sp"
            android:layout_height="150sp"
            android:text="Моя полка"
            android:onClick="bookshelf"
            android:textSize="25sp">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <Button

            android:backgroundTint="@color/blue1"
            android:id="@+id/later_books"
            android:layout_width="210sp"
            android:layout_height="150sp"
            android:text="Отложенные книги"
            android:onClick="later_books"
            android:textSize="25sp">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="bookshelf"
        android:layout_weight="1">
        <Button

            android:backgroundTint="@color/blue2"
            android:id="@+id/profile"
            android:layout_width="160sp"
            android:layout_height="150sp"
            android:text="Мой профиль"
            android:onClick="my_profile"
            android:textSize="25sp">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:gravity="center"
        android:background="@color/brown"
        >

    </LinearLayout>

</LinearLayout>